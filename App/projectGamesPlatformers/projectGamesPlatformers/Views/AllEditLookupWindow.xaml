<Window x:Class="projectGamesPlatformers.Views.AllEditLookupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectGamesPlatformers.Views"
        mc:Ignorable="d"
        Title="Редактирование" SizeToContent="Height" Width="380" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#A8E4A0">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#ADDFAF"/>
            <Setter Property="BorderBrush" Value="#89AC76"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Background" Value="#44944A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="35"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#89AC76"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#44944A"/>
            <Setter Property="BorderBrush" Value="#44944A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" CornerRadius="12" Margin="15" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="270" Opacity="0.1" ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="lblTitle" Text="Введите название:" 
                           Foreground="#89AC76" FontSize="14" 
                           FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBox x:Name="txtName" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена" Width="90" 
                            Style="{StaticResource CancelButton}" 
                            Margin="0,0,10,0" Click="BtnCancel_Click"/>

                    <Button Content="СОХРАНИТЬ" Width="110" 
                            Style="{StaticResource SaveButton}" 
                            Click="BtnSave_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
