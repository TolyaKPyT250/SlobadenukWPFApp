<Window x:Class="projectGamesPlatformers.Views.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projectGamesPlatformers.Views"
        mc:Ignorable="d"
        Title="Справочник игровых платформеров" Height="700" Width="1050" 
        WindowStartupLocation="CenterScreen" Background="#A8E4A0">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#44944A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <Style TargetType="Control" x:Key="ModernInput">
            <Setter Property="Background" Value="#ADDFAF"/>
            <Setter Property="BorderBrush" Value="#89AC76"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button" x:Key="SmallToolButton">
            <Setter Property="Background" Value="#BDECB6"/>
            <Setter Property="BorderBrush" Value="#89AC76"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ADDFAF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#89AC76"/>
            <Setter Property="RowBackground" Value="#F0FFF0"/>
            <Setter Property="AlternatingRowBackground" Value="#BDECB6"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#89AC76"/>
            <Setter Property="VerticalGridLinesBrush" Value="#89AC76"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#BDECB6" CornerRadius="8" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск по названию:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtSearch" Width="250" Style="{StaticResource ModernInput}" TextChanged="TxtSearch_TextChanged" Background="White"/>
                <Button Content="Сбросить фильтр" Margin="15,0,0,0" Width="140" Height="28" 
                        Style="{StaticResource SmallToolButton}" Click="BtnReset_Click"/>
            </StackPanel>
        </Border>

        <DataGrid x:Name="dgGames" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"  
                  SelectionChanged="DgGames_SelectionChanged" SelectionMode="Single" 
                  MouseDoubleClick="DgGames_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="1.5*"/>
                <DataGridTextColumn Header="Разработчик" Binding="{Binding Developer.Name}" Width="*"/>
                <DataGridTextColumn Header="Издатель" Binding="{Binding Publisher.Name}" Width="*"/>
                <DataGridTextColumn Header="Механика" Binding="{Binding Mechanics}" Width="*"/>
                <DataGridTextColumn Header="Персонаж" Binding="{Binding Protagonist}" Width="*"/>
                <DataGridTextColumn Header="Платформа" Binding="{Binding Platform.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Детальная информация и управление" Grid.Row="2" Margin="0,15,0,0" Padding="10" 
          BorderBrush="#44944A" Foreground="#44944A" FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="160"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="Название игры:"/>
                    <TextBox x:Name="inpTitle" />

                    <TextBlock Text="Разработчик:" Margin="0,8,0,2"/>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="5,0,0,0">
                            <Button Content="+" Style="{StaticResource SmallToolButton}" Width="30" Height="25" Click="BtnAddDev_Click"/>
                            <Button Content="-" Style="{StaticResource SmallToolButton}" Width="30" Height="25" Margin="2,0,0,0" Click="BtnDelDev_Click"/>
                        </StackPanel>
                        <ComboBox x:Name="cmbDeveloper" Style="{StaticResource ModernInput}" DisplayMemberPath="Name" SelectedValuePath="DeveloperID"/>
                    </DockPanel>

                    <TextBlock Text="Издатель:" Margin="0,8,0,2"/>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="5,0,0,0">
                            <Button Content="+" Style="{StaticResource SmallToolButton}" Width="30" Height="25" Click="BtnAddPub_Click"/>
                            <Button Content="-" Style="{StaticResource SmallToolButton}" Width="30" Height="25" Margin="2,0,0,0" Click="BtnDelPub_Click"/>
                        </StackPanel>
                        <ComboBox x:Name="cmbPublisher" Style="{StaticResource ModernInput}" DisplayMemberPath="Name" SelectedValuePath="PublisherID"/>
                    </DockPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="Игровые механики:"/>
                    <TextBox x:Name="inpMechanics"/>

                    <TextBlock Text="Главный герой:" Margin="0,8,0,2"/>
                    <TextBox x:Name="inpProtagonist"/>

                    <TextBlock Text="Платформа:" Margin="0,8,0,2"/>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="5,0,0,0">
                            <Button Content="+" Style="{StaticResource SmallToolButton}" Width="30" Height="25" Click="BtnAddPlat_Click"/>
                            <Button Content="-" Style="{StaticResource SmallToolButton}" Width="30" Height="25" Margin="2,0,0,0" Click="BtnDelPlat_Click"/>
                        </StackPanel>
                        <ComboBox x:Name="cmbPlatform" Style="{StaticResource ModernInput}" DisplayMemberPath="Name" SelectedValuePath="PlatformID"/>
                    </DockPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Center">
                    <Button Content="ДОБАВИТЬ" Height="50" Margin="0,0,0,5" 
                    Background="#44944A" Foreground="White" FontWeight="Bold" 
                    BorderThickness="0" Click="BtnAdd_Click"/>

                    <Button Content="Удалить выбранную" Height="30" Margin="0,0,0,5" 
                    Background="#BDECB6" Foreground="#44944A" BorderBrush="#44944A"
                    Click="BtnDelete_Click"/>

                    <Button Content="Очистить форму" Height="30" 
                    Background="Transparent" BorderBrush="#89AC76" Foreground="#89AC76"
                    Click="BtnClear_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,15,0">
                    <TextBlock Text="Описание:"/>
                    <TextBox x:Name="inpDescription" Height="60" 
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
